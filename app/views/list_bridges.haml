:javascript
    $(document).ready(function(){
        $('#bridges').dataTable();
    });
%table#bridges.display
    %thead
        %tr
            %th
                SVN Repos
            %th
                Github Repos
            %th
                Owner
            %th
                Created
    %tbody
        - for row in items
            %tr
                - for column in row
                    %td= column